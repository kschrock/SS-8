<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:gravity="center"
    tools:context=".CompanyHomeActivity">


    <TextView
        android:id="@+id/textCompanySplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="Company Home"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonMakeEvent"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Make Event" />

    <Button
        android:id="@+id/buttonMakePrize"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Make Prize" />
    <Button
        android:id="@+id/buttonMakeQRCode"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Make QR" />








</LinearLayout>